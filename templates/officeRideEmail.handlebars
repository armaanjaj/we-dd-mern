<html>
    <head>
        <meta charset="utf-8" />
        <meta
            http-equiv="x-ua-compatible"
            content="ie=edge"
            aria-orientation="vertical"
        />
        <title>New ride request received</title>
    </head>
    <body>
        <div>
            <h2>Personal information</h2>
            <table>
                <tr>
                    <th>Name:</th>
                    <td>{{name}}</td>
                </tr>
                <tr>
                    <th>Email:</th>
                    <td>{{email}}</td>
                </tr>
                <tr>
                    <th>Phone number:</th>
                    <td>{{phone}}</td>
                </tr>
                <tr>
                    <th>Payment method:</th>
                    <td>{{pay_mode}}</td>
                </tr>
            </table>
        </div>

        <div>
            <h2>Trip details</h2>
            <table>
                <tr>
                    <th>Pickup address:</th>
                    <td>{{pick}}</td>
                </tr>
                <tr>
                    <th>Destination:</th>
                    <td>{{drop}}</td>
                </tr>
            </table>
        </div>

        <div>
            <h2>Vehicle Details</h2>
            <table>
                <tr>
                    <th>Transmission type:</th>
                    <td>{{transmisson}}</td>
                </tr>
            </table>
        </div>
    </body>
</html>