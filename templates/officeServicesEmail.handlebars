<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="x-ua-compatible" content="ie=edge" aria-orientation="vertical" />
        <title>New Service request</title>
    </head>
    <body>
        <div>
            <h2>Personal information</h2>
            <table>
                <tr>
                    <th>Name:</th>
                    <td>{{name}}</td>
                </tr>
                <tr>
                    <th>Email:</th>
                    <td>{{email}}</td>
                </tr>
                <tr>
                    <th>Phone number:</th>
                    <td>{{phone}}</td>
                </tr>
                <tr>
                    <th>Full address:</th>
                    <td>{{address}}</td>
                </tr>
                <tr>
                    <th>Postal code:</th>
                    <td>{{postalCode}}</td>
                </tr>
            </table>
        </div>

        <div>
            <h2>Service type</h2>
            <br />
            {{services}}
        </div>

        <div>
            <h2>Questions & comments</h2>
            <br />
            {{questionsComments}}
        </div>
    </body>
</html>